OPT_CFLAGS  = -I/usr/local/include `pkg-config --cflags opencv`
OPT_LDFLAGS = -lm -lgpg5300 -lncurses -L/usr/local/lib -lopencv_highgui -lopencv_core -lopencv_legacy `pkg-config --libs opencv`

CXXFLAGS = `rtm-config --cflags` -I. $(OPT_CFLAGS)
LDFLAGS  = `rtm-config --libs` $(OPT_LDFLAGS)
SHFLAGS  = -shared

IDLC     = `rtm-config --idlc`
IDLFLAGS = `rtm-config --idlflags` -I`rtm-config --prefix`/include/rtm/idl
WRAPPER  = rtm-skelwrapper
WRAPPER_FLAGS = --include-dir="" --skel-suffix=Skel --stub-suffix=Stub

SKEL_OBJ = 
